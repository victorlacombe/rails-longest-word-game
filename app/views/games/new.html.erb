<div class="container">
  <h1>New Game</h1>
  <div class="letters list-inline">
    <% @letters.each do |letter| %>
      <ul>
        <p><%= letter %></p>
      </ul>
      <% end %>
  </div>

  <div class="attempt">
    <h2>What is the longest word you can find?</h2>
    <form action="/score" method="post" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="word" placeholder="Take a chance" class="form-control input">
      <input type="submit" class="form-control submit">
    </form>
  </div>
</div>
